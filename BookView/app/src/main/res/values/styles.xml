<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarOverflow</item>
    </style>

    <style name="commBtn" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_btn</item>
    </style>

    <style name="ToolbarOverflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/more</item>
    </style>
</resources>
